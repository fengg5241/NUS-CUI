#include <iostream>
#include <math.h>

using namespace std;


double area1(double base,double height){
    return base * height / 2;
}

double const PI=3.14159265;
double area2 (double A,double B,double ABAngle){
    return A * B * sin(ABAngle * PI/180.0) / 2.0;
}

